<h3 class="title is-3">Restaurants in your area:</h3>
<% @restaurants.each do |restaurant| %>
<% @restaurant = restaurant %>
    <div class="py-2">
        <p class="mr-2"><%= @restaurant.name_cuisine %></p>
        <a>
            <%= link_to 'Edit', edit_restaurants_path(restaurant), class: "button is-warning " %>
        </a>
        <a>
            <%= link_to 'Delete', @restaurant, class: "button is-danger" %>
        </a>
    </div>
<% end %>



<div class="py-3">
    <%= link_to 'New Restaurant', restaurants_new_path, class: "button is-primary is-outlined is-round" %>
</div>
